#include<iostream>

using namespace std;

using namespace std;

int main()
{
    string s, p;
    cin >> s >> p;
    
    string res;
    res += s[0];
    
    int flag = 0, i = 1, j = 0;
    while (s[i] < p[j] && i < s.size()) {
        res += s[i++];
    }
    res += p[j];
    cout << res << endl;
    
    return 0;
}
