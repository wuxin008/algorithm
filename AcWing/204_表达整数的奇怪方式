//AcWing
#include<iostream>

using namespace std;

typedef long long LL;

int n;

LL exgcd(LL a, LL b, LL &x, LL &y)
{
    if (!b) {
        x = 1, y = 0;
        return a;
    }
    LL t = exgcd(b, a % b, y, x);
    y -= a / b * x;
    return t;
}

int main()
{
    scanf("%d", &n);

    LL a1, m1;
    scanf("%lld %lld", &a1, &m1);

    for (int i = 0; i < n - 1; ++i) {
        LL a2, m2;
        scanf("%lld%lld", &a2, &m2);

        LL y1, y2;
        LL d = exgcd(a1, a2, y1, y2);
        if ((m2 - m1) % d) {
            puts("-1");
            return 0;
        }
        y1 *= (m2 - m1) / d;
        int t = a2 / d;
        y1 = (y1 % t + t) % t;
        m1 = a1 * y1 + m1;
        a1 = a1 * a2 / d;
    }

    printf("%lld", (m1 % a1 + a1) % a1);
    return 0;
}
