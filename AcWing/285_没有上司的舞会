//AcWing
#include<iostream>
#include<cstring>

using namespace std;

const int N = 6010;

int n;
int h[N], e[N], ne[N], idx;
int s[N], in[N];
int f[N][2];

void add(int a, int b)
{
    e[idx] = b;
    ne[idx] = h[a];
    h[a] = idx++;
}

void dfs(int v)
{
    for (int i = h[v]; i != -1; i = ne[i]) {
        int k = e[i];
        dfs(k);
        f[v][1] += f[k][0];
        f[v][0] += max(f[k][1], f[k][0]);
    }
    f[v][1] += s[v];
}

int main()
{
    cin >> n;
    
    memset(h, -1, sizeof h);
    
    for (int i = 1; i <= n; ++i) {
        scanf("%d", &s[i]);
    }
    
    int a, b;
    for (int i = 1; i < n; ++i) {
        scanf("%d%d", &a, &b);
        add(b, a);
        in[a]++;
    }
    
    int root = 0;
    for (int i = 1; i <= n; ++i) {
        if (root) break;
        if (!in[i]) root = i;
    }
    
    dfs(root);
    
    cout << max(f[root][0], f[root][1]) << endl;
    
    return 0;
}
